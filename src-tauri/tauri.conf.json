{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ebook-reader",
  "version": "0.1.0",
  "identifier": "dev.jikun.ebookReader",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ebook-reader",
        "width": 500,
        "height": 400,
        "resizable": true,
        "transparent": true,
        "center": true,
        "decorations": false,
        "shadow": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "ebooks/*"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}